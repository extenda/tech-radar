{
  "name": "tech-radar-server",
  "version": "0.0.1-local",
  "private": true,
  "description": "Extenda Retail Technology Radar Backend Server",
  "main": "src/js/index.js",
  "scripts": {
    "build": "ncc build src/js/index.js -o dist",
    "lint:js": "eslint src test",
    "start": "npm run env PORT=3000 -- node src/js/index.js",
    "test": "jest"
  },
  "repository": "github:extenda/tech-radar",
  "author": {
    "name": "Extenda Retail",
    "email": "info@extendaretail.com",
    "url": "https://extendaretail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/extenda/tech-radar#readme",
  "dependencies": {
    "express": "^4.18.1",
    "google-auth-library": "^8.5.2",
    "launchdarkly-node-server-sdk": "^6.4.3",
    "morgan": "^1.10.0",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.21.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.1.2",
    "jest-junit": "^14.0.1",
    "jest-sonar": "^0.2.12",
    "node-fetch": "^2.6.7"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": false
    },
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "no-console": 0
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "TEST-jest.xml"
        }
      ],
      [
        "jest-sonar",
        {
          "outputDirectory": "test-results",
          "outputName": "sonar-report.xml"
        }
      ]
    ]
  }
}
