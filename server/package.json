{
  "name": "tech-radar-server",
  "version": "0.0.1-local",
  "private": true,
  "description": "Extenda Retail Technology Radar Backend Server",
  "main": "src/js/index.js",
  "scripts": {
    "build": "esbuild src/js/index.js --bundle --platform=node --minify=true --outfile=dist/index.js",
    "lint:js": "eslint src test",
    "start": "npm run env PORT=3000 -- node src/js/index.js",
    "test": "jest"
  },
  "repository": "github:extenda/tech-radar",
  "author": {
    "name": "Extenda Retail",
    "email": "info@extendaretail.com",
    "url": "https://extendaretail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/extenda/tech-radar#readme",
  "dependencies": {
    "express": "^4.19.2",
    "google-auth-library": "^9.13.0",
    "launchdarkly-node-server-sdk": "^6.2.0",
    "morgan": "^1.10.0",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar": "^0.2.16",
    "node-fetch": "^2.7.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": false
    },
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "no-console": 0
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "TEST-jest.xml"
        }
      ],
      [
        "jest-sonar",
        {
          "outputDirectory": "test-results",
          "outputName": "sonar-report.xml"
        }
      ]
    ]
  }
}
