{
  "name": "tech-radar",
  "version": "0.0.1-local",
  "private": true,
  "description": "Extenda Retail Technology Radar",
  "main": "src/js/index.jsx",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "webpack-cli --mode production",
    "build:backend": "npm run build --prefix server",
    "lint:js": "eslint --ext .js --ext .jsx src test",
    "start": "webpack-dev-server --open --mode development",
    "backend": "npm start --prefix server",
    "frontend": "npm run env BACKEND=1 -- webpack-dev-server --open --mode development",
    "pip:install": "pip install --user -r .scripts/python_requirements.txt",
    "test": "jest",
    "yaml:lint": "python .scripts/yaml_lint.py",
    "yaml:validate": "python .scripts/yaml_validate.py"
  },
  "repository": "github:extenda/tech-radar",
  "author": {
    "name": "Extenda Retail",
    "email": "info@extendaretail.com",
    "url": "https://extendaretail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/extenda/tech-radar#readme",
  "dependencies": {
    "d3-force": "^3.0.0",
    "d3-selection": "^3.0.0",
    "fs-extra": "^10.1.0",
    "klaw-sync": "^6.0.0",
    "launchdarkly-react-client-sdk": "^2.27.0",
    "prop-types": "^15.8.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-google-login": "^5.2.2",
    "react-markdown": "^8.0.3",
    "react-router-dom": "^6.4.1",
    "react-tag-autocomplete": "^6.3.0",
    "sha.js": "^2.4.11",
    "thenby": "^1.3.4",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.1.2",
    "babel-loader": "^8.2.5",
    "css-loader": "^5.2.7",
    "debug": "^4.3.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.1.2",
    "jest-junit": "^14.0.1",
    "jest-sonar": "^0.2.12",
    "mini-css-extract-plugin": "^1.6.2",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "style-loader": "^2.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-log": "^3.0.2"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    },
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  },
  "eslintIgnore": [
    "src/js/lib/radar.js"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/js/lib/*.js",
      "!server/**"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "TEST-jest.xml"
        }
      ],
      [
        "jest-sonar",
        {
          "outputDirectory": "test-results",
          "outputName": "sonar-report.xml"
        }
      ]
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/server/"
    ]
  }
}
