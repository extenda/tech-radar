{
  "name": "tech-radar",
  "version": "0.0.1-local",
  "private": true,
  "description": "Extenda Retail Technology Radar",
  "main": "src/js/index.jsx",
  "scripts": {
    "build": "webpack-cli --mode production",
    "lint:js": "eslint src",
    "start": "webpack-dev-server --open --watch --mode development --output-path build",
    "pip:install": "pip install --user -r .scripts/python_requirements.txt",
    "test": "RADAR_DIR=src/__test__/radar jest",
    "yaml:lint": "python .scripts/yaml_lint.py",
    "yaml:validate": "python .scripts/yaml_validate.py"
  },
  "repository": "github:extenda/tech-radar",
  "author": {
    "name": "Extenda Retail",
    "email": "info@extendaretail.com",
    "url": "https://extendaretail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/extenda/tech-radar#readme",
  "dependencies": {
    "d3-force": "^2.0.1",
    "d3-selection": "^1.4.0",
    "fs-extra": "^8.0.1",
    "klaw-sync": "^6.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.0.8",
    "react-router-dom": "^5.0.0",
    "thenby": "^1.3.0",
    "yaml": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "conventional-changelog-angular": "^5.0.2",
    "conventional-recommended-bump": "^4.0.4",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "mini-css-extract-plugin": "^0.7.0",
    "style-loader": "^0.23.1",
    "watch": "^1.0.2",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-log": "^2.0.0"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    },
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-extraneous-dependencies": false
    }
  },
  "eslintIgnore": [
    "src/js/lib/radar.js"
  ],
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/__test__/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "jest-junit": {
    "outputDirectory": "<rootDir>/test-results/jest",
    "outputName": "TEST-jest.xml"
  }
}
