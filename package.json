{
  "name": "tech-radar",
  "version": "0.0.1-local",
  "private": true,
  "description": "Extenda Retail Technology Radar",
  "main": "src/js/index.jsx",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "webpack-cli --mode production",
    "build:backend": "npm run build --prefix server",
    "lint:js": "eslint src test",
    "start": "webpack-dev-server --open --watch --mode development --output-path build",
    "backend": "npm start --prefix server",
    "auth": "npm run env BACKEND=1 -- webpack-dev-server --open --watch --mode production --host local.extendaretail.com --output-path build",
    "pip:install": "pip install --user -r .scripts/python_requirements.txt",
    "test": "jest",
    "yaml:lint": "python .scripts/yaml_lint.py",
    "yaml:validate": "python .scripts/yaml_validate.py"
  },
  "repository": "github:extenda/tech-radar",
  "author": {
    "name": "Extenda Retail",
    "email": "info@extendaretail.com",
    "url": "https://extendaretail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/extenda/tech-radar#readme",
  "dependencies": {
    "d3-force": "^2.0.1",
    "d3-selection": "^1.4.0",
    "fs-extra": "^8.0.1",
    "klaw-sync": "^6.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-google-login": "^5.1.1",
    "react-markdown": "^4.0.8",
    "react-router-dom": "^5.0.0",
    "react-tag-autocomplete": "^5.11.1",
    "thenby": "^1.3.0",
    "yaml": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.6.0",
    "debug": "^4.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "jest-sonar": "^0.2.8",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "style-loader": "^1.2.1",
    "watch": "^1.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-log": "^3.0.1"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    },
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  },
  "eslintIgnore": [
    "src/js/lib/radar.js"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/js/lib/*.js",
      "!server/**"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "TEST-jest.xml"
        }
      ],
      [
        "jest-sonar",
        {
          "outputDirectory": "test-results",
          "outputName": "sonar-report.xml"
        }
      ]
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/server/"
    ]
  }
}
